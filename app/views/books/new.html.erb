<body background="https://131pizza.com/wp-content/uploads/Page-Background-3.jpg">
<%= form_for @book do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>

  <%= f.label :pages %>
  <%= f.text_field :pages %>
  <br>
  <%= f.label :pub_year %>
  <%= f.text_field :pub_year %>
  <br>
  <%= f.label :thumb_url %>
  <%= f.text_field :thumb_url %>
  <br>
  <%= f.label :authors %>
  <%= f.text_field :authors %>
  <br>
  <%= f.submit 'Add a Book' %>
<% end %>
