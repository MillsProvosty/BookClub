<%= form_for [@book, @review] do |f| %>
  <%= f.label :user %>
  <%= f.text_field :user %>

<%= f.label :heading %>
<%= f.text_field :heading %>

<%= f.label :full_review %>
<%= f.text_field :full_review %>

<%= f.label :score %>
<%= f.text_field :score %>


<%= f.submit 'Add a Review' %>
<% end %>
