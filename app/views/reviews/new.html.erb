<body background="https://131pizza.com/wp-content/uploads/Page-Background-3.jpg">
<%= form_for [@book, @review] do |f| %>
  <%= f.label :user %>
  <%= f.text_field :user %>

<%= f.label :heading %>
<%= f.text_field :heading %>

<%= f.label :full_review %>
<%= f.text_field :full_review %>

<%= f.label :score %>
<%= f.number_field :score, min: 1, max: 5 %>


<%= f.submit 'Add a Review' %>
<% end %>
